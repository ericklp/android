<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericklopes.drinkmixer.DetailActivity">

    <EditText
        android:id="@+id/drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="drinkName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/drinkName"
        android:layout_below="@+id/drinkName"
        android:layout_marginTop="80dp"
        android:text="Ingredientes" />

    <EditText
        android:id="@+id/ingEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ingredientes"
        android:layout_below="@+id/ingredientes"
        android:layout_marginTop="29dp"
        android:background="@android:drawable/edit_text"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ingredientes" />

</android.widget.RelativeLayout>
